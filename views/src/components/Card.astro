---
interface Props {
  code: string;
  shortMessage: string;
}

const { code = "100", shortMessage = "OK" } = Astro.props;
---

<div class="bg-gray-900 h-screen">
  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8 h-screen grid place-content-center">
    <div class="mx-auto w-2xl max-w-2xl -mt-[25vh]">
      <div class="divide-y divide-gray-800 overflow-hidden rounded-lg bg-gray-700 shadow-sm min-w-1/3">
        <div class="px-4 py-5 sm:px-6">
          <h1 class="text-3xl my-2 text-gray-300">{code} - {shortMessage}</h1>
        </div>

        <div class="px-4 py-5 sm:p-6">
          <div class="relative h-64 overflow-hidden rounded-sm border border-dashed border-gray-900 opacity-75">
            <svg class="absolute inset-0 size-full stroke-gray-800/20" fill="none">
              <defs>
                <pattern
                  id="pattern-5c1e4f0e-62d5-498b-8ff0-cf77bb448c8e"
                  x="0"
                  y="0"
                  width="10"
                  height="10"
                  patternUnits="userSpaceOnUse">
                  <path d="M-3 13 15-5M-5 5l18-18M-1 21 17 3"></path>
                </pattern>
              </defs>
              <rect stroke="none" fill="url(#pattern-5c1e4f0e-62d5-498b-8ff0-cf77bb448c8e)" width="100%" height="100%"
              ></rect>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
